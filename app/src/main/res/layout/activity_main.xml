<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foc.pmdm.u2.asynctask.MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="1000"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_alignTop="@+id/btStop"
        android:layout_toLeftOf="@+id/btStop"
        android:layout_toStartOf="@+id/btStop"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/colorAccent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btStop"
        android:text="@string/btStop"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="396dp"
        android:layout_alignBaseline="@+id/btStart"
        android:layout_alignBottom="@+id/btStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btStart"
        android:text="@string/btStart"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="396dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="52dp" />

</android.widget.RelativeLayout>
